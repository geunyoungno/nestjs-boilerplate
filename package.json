{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && tsc-alias -p tsconfig.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "RUN_MODE=local nest start",
    "start:local": "RUN_MODE=local nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "RUN_MODE=production node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --config ./eslint.config.mjs --fix",
    "lint-staged": "lint-staged",
    "test": "jest --config ./jest.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nestjs-boilerplate/test/jest-e2e.json",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.0",
    "@gersur/nest-file-fastify": "^1.0.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.9",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.9",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/platform-fastify": "^11.0.9",
    "@nestjs/swagger": "^11.0.3",
    "bcrypt": "^5.1.1",
    "bignumber.js": "^9.1.2",
    "change-case-all": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify-multipart": "^5.4.0",
    "fastify-swagger": "^5.2.0",
    "jsonc-parser": "^3.3.1",
    "mysql2": "^3.12.0",
    "nestjs-cls": "^5.2.0",
    "nodemailer": "^6.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-themes": "^1.4.3",
    "typeorm": "^0.3.20",
    "typeorm-transactional": "^0.5.0",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.9",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^4.34.1",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache \"{src,apps,libs,test}/**/*.ts\" "
    ]
  }
}
