{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 120,
  "arrowParens": "always",
  "parser": "typescript",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": [
        ".vscode/launch.json",
        ".vscode/settings.json",
        "tsconfig.build.json",
        "tsconfig.json",
        ".prettierrc",
        "nest-cli.json",
        "nestjs-boilerplate.code-workspace",
        ".huskyrc"
      ],
      "options": {
        "parser": "json",
        "trailingComma": "none"
      }
    }
  ]
}
